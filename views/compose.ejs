<%- include("partials/header") -%>
<h1>Compose</h1>
<div class="form-group">
  <form action="/compose" method="post" enctype="multipart/form-data">
    <label class="form-label">Title</label>
    <input class="form-control form-control-lg" type="text" name="postTitle">

    <label class="form-label">Post</label>
    <textarea class="form-control" rows="5" name="postText"></textarea>
</div>
<div class="input-group">
  <div class="custom-file">
    <input type="file" class="custom-file-input" name="postImage"/>
  </div>
</div>
<button type="submit" class="btn btn-primary " name="button">Publish</button>
  </form>
<%- include("partials/footer") -%>
